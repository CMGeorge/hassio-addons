#!/usr/bin/with-contenv bashio
# ==============================================================================
# JPD Hass.io Add-ons: forked-daapd server
# Runs the avahi daemon
# ==============================================================================
declare -a options

bashio::log.info 'Starting the forked-daapd avahi daemon...'

options+=(--daemonize)
options+=(--no-chroot)

# Run UniFi
exec /usr/sbin/avahi-daemon "${options[@]}"
